<div class="row">
  <div class="panel panel-default panel-search">
    <div class="panel-heading">
        <div class="row">
          <%= form_tag('', :id => "search-form", :class => 'form-horizontal', :multipart => true, method: :post) do %>  
            <div class="form-group search-group">
              <div class="col-md-offset-1 col-sm-offset-1 col-xs-offset-1 col-md-2 col-sm-2 col-xs-2 text-right">
                <label class="label-control search-label"><strong>Search:</strong></label>
              </div>    
              <div class="col-md-7 col-sm-7 col-xs-7">
                <%= autocomplete_field_tag :Word, params[:Word], autocomplete_dictionary_word_dictionaries_path, :id => "word", :class => 'form-control', :placeholder => 'Enter Keyword', :required => true %>
              </div>
            </div>
          <% end %>
        </div>
    </div>
  </div>  
</div> 

<% if !@word.nil? %>
  <div class="row">
      <h1>
        <div class="col-md-12">
          <%= @word.Word %>
        </div>
      </h1>
      <div class="col-md-12 col-xs-6 col-sm-6">
        <small class="text-muted"> [<%= @word.related_to %>]</small>
      </div> 
  </div>
  <hr>

  <div class="row">
    <div class="col-md-8">
      <div class="col-md-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h2>
              Synonyms
            </h2>
            <hr>
            <div class="row">
              <% @synonyms.each do |synonym| %>
                <div class="col-md-3 col-sm-3 col-xs-6">
                  <%= link_to synonym, "/#{synonym}", :class => 'btn btn-block btn-default btn-word' %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h2>
              Antonyms
            </h2>
            <hr>
            <div class="row">
              <% @antonyms.each do |antonym| %>
                <div class="col-md-3 col-sm-3 col-xs-6">
                  <%= link_to antonym, "/#{antonym}", :class => 'btn btn-block btn-default btn-word' %>
                </div>
              <% end %>
            </div>   
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3>
             Word Origin And History
          </h3>
          <hr>
          <p class="origin">
              <%= @word.origin %>
          </p>
        </div>
      </div>
    </div>  
            
  </div>

<% elsif @word_field %>  
  <div class="row blank-row">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h2 class="text-center text-muted">
            No Result Found
          </h2>
        </div>
      </div>      
  </div>
<% else %>
  <div class="row blank-row">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h2 class="text-center text-muted">
            TYPE KEYWORD TO FIND IT'S SYNONYMS, ANTONYMS AND ORIGIN
          </h2>
        </div>
      </div>      
  </div>    
<% end %>    